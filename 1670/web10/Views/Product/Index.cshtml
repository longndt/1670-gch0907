@model List<Product> 

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Product Id
            </th>
            <th>
                Product Name
            </th>
            <th>
                Product Price
            </th>
            <th>
                Product Quantity
            </th>
            <th>
                Product Image
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
       {
            <tr>
                <td>
                    @product.Id
                </td>
                <td>
                    @product.Name
                </td>
                    <td>
                    $ @product.Price
                   </td>
                <td>
                    @product.Quantity
                </td>
                <td>
                    <img src="@product.Image" width="100" height="100">
                </td>
            </tr>
        } 
    </tbody>
</table>