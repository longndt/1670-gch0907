@model demo.Models.University

<form class="card p-3 bg-light" method="post" asp-controller="University" asp-action="Edit">
    <h4 class="text text-success">Edit university</h4>
    <div class="form-group">
        <label class="h6 text-primary" asp-for="@Model.Name"></label>
        <input class="form-control" asp-for="@Model.Name" />
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>
    <div class="form-group">
        <label class="h6 text-primary" asp-for="@Model.Address"></label>
        <input class="form-control" asp-for="@Model.Address" />
        <span class="text-danger" asp-validation-for="@Model.Address"></span>
    </div>
    <div class="form-group">
        <label class="h6 text-primary">University Image</label><br />
        <img src="@Model.Logo" width="80" height="80" /><br />
        <input class="form-control mt-3" asp-for="@Model.Logo" />
        <span class="text-danger" asp-validation-for="@Model.Logo"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-warning" type="submit" value="Edit" />
    </div>
</form>