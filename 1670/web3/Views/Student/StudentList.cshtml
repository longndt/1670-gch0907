@model List<Student>

<div class="container col-md-8 text-center">
    <table class="table table-bordered">
        <thead>
            <tr class="text text-primary">
                <th>Student Id</th>
                <th>Student Name</th>
                <th>Student Age</th>
                <th>Student Grade</th>
                <th>Student Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model) {
                <tr class="text text-success">
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                    <td>@student.Grade</td>
                    <td><img src="@student.Image" width="100" height="100"></td>
                </tr>
            }
        </tbody>
    </table>
</div>
