@model List<Person> 

<table border="1">
    <thead>
        <tr>
            <th colspan="5">Person List</th>
        </tr>
        <tr>
            <th>No.</th>
            <th>Name</th>
            <th>Age</th>
            <th>Mobile</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
       {
         <tr>
             <td>@(Model.IndexOf(person)+1)</td>
             <td>@person.Name</td>
             <td>@person.Age</td>
             <td>@person.Mobile</td>
             <td>
                 <img src="@person.Image" width="100" height="100">
             </td>
         </tr>   
       }
    </tbody>
</table>



